extends layout
block content
    h1 注册例子
    form(action="",method="post")
        label 用户名
        input(type="text", name="user[username]",placeholder="用户名", value="#{submit.username||''}", required)
        label 密码
        input(type="password", name="user[pwd]", placeholder="密码", value="#{submit.pwd||''}", required)
        label 邮箱
        input(type="email", name="user[email]", placeholder="邮箱", value="#{submit.email||''}", required)
        input(type="submit", value="sign in")
    -if(error)
        div(style="color:red;") #{error}